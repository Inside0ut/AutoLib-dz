<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/phone_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_phone"
                app:tint="#212121" />

            <EditText
                android:id="@+id/phone_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/phone_ic"
                android:layout_toRightOf="@id/phone_ic"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="phone"
                android:background="#00000000"
                android:hint="Phone number"
                android:textColor="#212121"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@id/phone_ic"
                android:layout_marginTop="10dp"
                android:background="#b2b2b2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/password_ic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_phone"
                app:tint="#212121" />

            <EditText
                android:id="@+id/password_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/password_ic"
                android:layout_toRightOf="@id/password_ic"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:background="#00000000"
                android:hint="Password"
                android:textColor="#212121"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@id/password_ic"
                android:layout_marginTop="10dp"
                android:background="#b2b2b2"/>

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/_rounded_10dp_active"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatButton>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D'ont have any account ? "
                android:textColor="#B2B2B2"/>

            <TextView
                android:id="@+id/register_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>